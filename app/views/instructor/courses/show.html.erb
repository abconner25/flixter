
<script>
  $(function() {
    $('.lessons').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-lesson-url'),
          dataType: 'json',
          data: { lesson: { row_order_position: ui.item.index() } }
        });
      }
    });

    $('.sections').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-section-url'),
          dataType: 'json',
          data: { section: { row_order_position: ui.item.index() } }
        });
      }
    });
   });
</script>
<br/>
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <% if current_course.image.url != nil %>
    <%= image_tag current_course.image.url, class: 'img_fluid' %>
  <% end %>
  <br/>
  <%= link_to 'Preview as student...', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br clear="clr" />

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>
  <br/>
  
  <ul class="sections">
    <% current_course.sections.rank(:row_order).each do |section| %>
      <li data-update-section-url=<%= instructor_section_path(section) %>>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-sm float-right' %>
        <ul class="lessons">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li data-update-lesson-url=<%= instructor_lesson_path(lesson) %>>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
            <br/>
          <% end %>
        </ul>
        <hr class="break"/>
      </li>
    <% end %>
  </ul>

</div>